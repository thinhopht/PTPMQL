
@model DemoMVC.Models.Person

@{
    ViewData["Title"] = "Update";
}

<h1> Update   </h1>
<p>Hiển thị danh sách bạn muốn sửa:</p> <br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id: @Model.Id</th>
            <th>Họ tên: @Model.FullName</th>
            <th>Địa chỉ: @Model.Address</th>
        </tr>
    </thead>
</table>

<h2>   nhập thông tin bạn muốn sửa ở bạn ghi bạn vừa chọn:</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update"  method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Create">Bạn muốn sửa id? Bấm vào đây</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
