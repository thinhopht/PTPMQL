@Model IEnumerable<DemoMVC.Models.Person>

@{
    ViewData["Title"] = "Danh sách Person";
}

<h1>Danh sách Person</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>PersonId</th>
            <th>Họ và Tên</th>
            <th>Địa chỉ</th>
            <th></th> <!-- Cột thao tác -->
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FullName</td>
            <td>@item.Address</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Create" asp-route-id="">Tạo</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
